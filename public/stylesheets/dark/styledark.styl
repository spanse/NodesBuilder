@import url('https://fonts.googleapis.com/css?family=Freckle+Face|Kameron')

body
  padding-top: 50px
  padding-bottom: 20px
  background: rgba(66, 66, 66, 1)

/* Set padding to keep content from hitting the edges */
.body-content
  padding-left: 15px
  padding-right: 15px

/* Set width on the form input elements since they're 100% wide by default */
input,
select,
textarea
  max-width: 280px
.body-content
	font-family: 'Kameron', serif
	font-size: 1.2em

/*------------------------Beginning of styling-----------------*/
/*---navbar---*/
.navbar-dark
	background: rgba(245, 222, 179,0.8)
	background: linear-gradient(rgba(245, 222, 179,0.8), rgba(245, 222, 179,0.2))
.navbar a
	color: rgb(66, 66, 66) !important
	font-weight: bold
	border-right: 1px solid rgba(0, 0, 0, 0.15)
.navbar a:hover
	background-color: rgba(0, 0, 0, 0.05) !important


/*---articles---*/
article
	margin: 2%
	background: rgb(245, 222, 179)
	border: 1px rgb(17, 60, 55) solid
	border-radius: 2px
	box-shadow: 1px 1px 1px #888888
	a,
	a:link,
	a:visited,
	a:active
		text-decoration: none
		color: inherit
	a:hover
		color: blue
.titleBar
	width: 90%
	height: 10%
	border-top: 20px solid rgb(60, 17, 21)
	border-right: 100px solid transparent
hr
   display: block
   position: relative
   padding: 0
   margin: 0
   height: 0
   width: 100%
   max-height: 0
   font-size: 1px
   line-height: 0
   clear: both
   border: none
   border-top: 0.5px solid black